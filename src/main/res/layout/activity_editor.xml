<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configure Complications"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/complication_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Short Text (Top Left)"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/complication_101"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Long Text (Top Right)"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/complication_102"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ranged Value (Bottom Left)"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/complication_103"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image (Bottom Right)" />

</LinearLayout>
